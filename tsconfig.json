{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "lib": ["es2017"],
        "noErrorTruncation": true
    },
    "include": [
        "src/**/*"
    ]
}
